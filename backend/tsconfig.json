{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "rootDir": "./",
        "outDir": "./dist",
        "baseUrl": "./",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "types": [
            "jest",
            "node",
            "express"
        ],
    },
    "include": [
        "src/**/*.ts",
        "test/**/*"
    ],
    "exclude": [
        "node_modules",
        "test/**/*.test.*",
        "dist"
    ]
}